{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["./src/types", "./node_modules/@types"]   // ðŸ‘ˆ add this
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"],           // ðŸ‘ˆ include custom types
  "exclude": ["node_modules", "dist"]
}
